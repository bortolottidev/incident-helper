{
  "name": "incident-helper",
  "version": "0.1.2",
  "description": "A friendly helper for your incident log",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "vitest dev",
    "test:ci": "vitest run --silent",
    "ts:standard": "ts-standard --fix",
    "prepare": "husky install",
    "build": "tsc --build",
    "example": "pnpm run build && node dist/example/send-error.js",
    "publish": "pnpm run test:ci && pnpm run build && pnpm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bortolottidev/incident-helper"
  },
  "keywords": ["google", "chat", "alert", "log", "incident"],
  "author": "Daniele Bortolotti",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/uuid": "^9.0.1",
    "husky": "^8.0.0",
    "ts-standard": "^12.0.2",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5",
    "@types/node": "^18.14.1"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  }
}
